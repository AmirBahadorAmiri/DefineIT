<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/material_alpha_1">

    <View
        android:id="@+id/main_view_profile"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/drawer_icon_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/standard_16dp"
        android:layout_marginTop="@dimen/standard_16dp"
        android:src="@drawable/ic_round_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/material_dark_2" />

    <ListView
        android:id="@+id/activity_main_drawer_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_view_profile" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/accountInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="خوش آمدید"
        app:layout_constraintStart_toStartOf="@id/drawer_icon_profile"
        app:layout_constraintTop_toBottomOf="@+id/drawer_icon_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>