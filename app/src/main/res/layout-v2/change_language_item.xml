<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/standard_8dp"
    android:backgroundTint="@color/material_alpha_1"
    android:layout_marginEnd="@dimen/standard_8dp"
    android:layout_marginStart="@dimen/standard_8dp"
    android:layout_marginTop="@dimen/standard_4dp"
    android:foreground="?selectableItemBackground"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.appcompat.widget.AppCompatImageView
            tools:src="@drawable/ic_round_telegram"
            android:id="@+id/translate_change_item_imageView"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatTextView
            tools:text="@string/app_name"
            android:id="@+id/translate_change_item_textView"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>